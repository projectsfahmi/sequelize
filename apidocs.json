                                        "default":"E01"
                                    },
                                    "EmployeeName":{
                                        "type": "string",
                                        "default":"Fahmi Rifa'i"
                                    },
                                    "Password":{
                                        "type": "string",
                                        "default":"123"
                                    },
                                    "DOB":{
                                        "type": "string",
                                        "default":"1991-02-02"
                                    },
                                    "TempatLahir":{
                                        "type": "string",
                                        "default":"Tangerang"
                                    },
                                    "MaritalStatus":{
                                        "type": "string",
                                        "default":"Married"
                                    },
                                    "PositionCode":{
                                        "type": "string",
                                        "default":"P01"
                                    },
                                    "PositionName":{
                                        "type": "string",
                                        "default":"AYAH"
                                    },
                                    "foto":{
                                        "type": "string",
                                        "format": "binary"
                                    }    

                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "sukses"
                    }
                }
            }
